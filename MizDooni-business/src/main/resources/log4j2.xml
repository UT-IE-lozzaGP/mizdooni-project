<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ALL">
    <Appenders>
        <File name="FileAppender" fileName="${env:CATALINA_HOME}/logs/MizDooni-business.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
